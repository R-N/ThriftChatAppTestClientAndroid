<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="bottom"
    android:foregroundGravity="bottom"
    android:gravity="bottom"
    android:keyboardNavigationCluster="false"
    android:orientation="vertical">


    <ListView
        android:id="@+id/chatListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="top"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_weight="1"
        android:divider="@android:color/transparent"
        android:foregroundGravity="top"
        android:stackFromBottom="true"
        android:transcriptMode="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|fill"
        android:foregroundGravity="bottom|fill"
        android:gravity="bottom|fill"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/chatField"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical|fill_vertical"
            android:layout_weight="1"
            android:ems="10"
            android:foregroundGravity="left|center_vertical|fill_vertical"
            android:gravity="left|center_vertical|fill_vertical"
            android:inputType="textMultiLine"
            android:maxLength="1001" />

        <ImageButton
            android:id="@+id/sendChatButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_weight="0"
            android:foregroundGravity="bottom|right"
            app:srcCompat="@android:drawable/ic_menu_send" />

    </LinearLayout>
</LinearLayout>



