<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top|left"
    android:layout_marginBottom="5dp"
    android:layout_marginTop="5dp"
    android:foregroundGravity="top|left"
    android:gravity="top|left"
    android:orientation="horizontal"
    app:layout_anchorGravity="top|left">

    <ImageButton
        android:id="@+id/displayPicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|center_vertical|fill_vertical"
        android:layout_marginRight="5dp"
        android:layout_weight="0"
        android:background="@android:color/transparent"
        android:foregroundGravity="left|center_vertical|fill_vertical"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:orientation="vertical">

        <TextView
            android:id="@+id/usernameText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:longClickable="false"
            android:text="Username"
            android:textSize="12sp"
            android:textStyle="bold"
            tools:text="Username" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:layout_marginLeft="-20dp"
                android:layout_weight="1"
                android:background="?android:attr/fastScrollPreviewBackgroundLeft"
                android:foregroundGravity="top|left"
                android:longClickable="false">

                <TextView
                    android:id="@+id/chatText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_weight="1"
                    android:foregroundGravity="center"
                    android:gravity="center"
                    android:text="asdf"
                    android:textAlignment="viewStart"
                    android:textIsSelectable="true"
                    android:textSize="16sp"
                    tools:text="asdf" />
            </FrameLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|left"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="0"
                android:foregroundGravity="bottom|left"
                android:gravity="bottom"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/readText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|left"
                    android:layout_weight="1"
                    android:elegantTextHeight="true"
                    android:foregroundGravity="bottom|left"
                    android:gravity="bottom|left"
                    android:singleLine="true"
                    android:text="Read"
                    android:textAlignment="viewStart"
                    android:textSize="12sp"
                    android:visibility="gone"
                    tools:text="Read" />

                <TextView
                    android:id="@+id/timestampText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:singleLine="true"
                    android:text="24:59 PM"
                    android:textSize="12sp"
                    tools:text="24:59 PM" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>